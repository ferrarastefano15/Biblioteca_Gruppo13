<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.text.Font?>

<BorderPane style="-fx-font-family: 'Segoe UI', sans-serif; -fx-background-color: #ecf0f1;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unisa.diem.softeng.gruppo13.gui.MainController">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: #34495e; -fx-padding: 15;">
            <Label text="Gestione Biblioteca" textFill="WHITE">
                <font> <Font name="System Bold" size="22.0" /> </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Button onAction="#btnSalva" style="-fx-background-color: #f1c40f; -fx-text-fill: #2c3e50; -fx-font-weight: bold; -fx-cursor: hand;" text="Salva su File" />
            <Button onAction="#btnEsci" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" text="Esci" />
        </HBox>
    </top>

    <center>
        <TabPane style="-fx-background-color: transparent;" tabClosingPolicy="UNAVAILABLE">
            
            <Tab text="Libri">
                <fx:include fx:id="vistaLibri" source="libri_view.fxml" />
            </Tab>

            <Tab text="Utenti">
                <fx:include fx:id="vistaUtenti" source="utenti_view.fxml" />
            </Tab>

            <Tab text="Prestiti">
                <fx:include fx:id="vistaPrestiti" source="prestiti_view.fxml" />
            </Tab>

        </TabPane>
    </center>
</BorderPane>
